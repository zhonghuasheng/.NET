<Window x:Class="自定义属性.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="525"
        Height="350">
    <StackPanel>
        <TextBox Name="txtBox1" Background="Gray" />
        <TextBox Name="txtBox2" Background="Green" />
        <TextBox Name="txtBox3" Background="Red" />
        <TextBox Name="txtBox4" Text="{Binding ElementName=txtBox2, Path=Text}" />
        <TextBlock Name="txtb" />
        <Button Name="btn1"
                Click="btn1_Click"
                Content="自定义属性" />
    </StackPanel>
</Window>
