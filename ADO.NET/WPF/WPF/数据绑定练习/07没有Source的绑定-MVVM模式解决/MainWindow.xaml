<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="_07没有Source的绑定_MVVM模式解决.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel DataContext="{Binding stu}" >
        <TextBox Text="{Binding StuId}"/>
        <TextBox Text="{Binding StuName}" d:IsHidden="True"/>
        <TextBox Text="{Binding StuAge}" d:IsHidden="True"/>
    </StackPanel>
</Window>
