<Window x:Class="路由事件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Border Height="50" Width="300" BorderBrush="Aqua" BorderThickness="1">
        <StackPanel Orientation="Horizontal" Button.Click="CommonHandlerClick" >
            <Button Name="test">I have a test</Button>
            <StackPanel Name="test1" Orientation="Horizontal" Button.Click="CommonHandlerClick">
                <Button Name="btnYes" Width="Auto" Margin="10,0,0,0" Click="CommonHandlerClick">Yes</Button>
                <Button Name="btnNo" Width="Auto" Margin="10,0,0,0">No</Button>
                <Button Name="btnCancel" Width="Auto" Margin="10,0,0,0">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
