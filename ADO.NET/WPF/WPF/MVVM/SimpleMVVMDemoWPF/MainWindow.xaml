<Window x:Class="SimpleMVVMDemoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleMVVMTest" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtBox1" Margin="5" Height="40" BorderBrush="Black" BorderThickness="1" Text="{Binding Path=Input1}"></TextBox>
        <TextBox x:Name="txtBox2" Margin="5" Height="40" BorderBrush="Black" BorderThickness="1" Text="{Binding Path=Input2}"></TextBox>
        <TextBox x:Name="txtBox3" Margin="5" Height="40" BorderBrush="Black" BorderThickness="1" Text="{Binding Path=Result}"></TextBox>
        <Button x:Name="Add" Margin="5" Height="40" Content="Add" Command="{Binding Path=AddCommand}"></Button>
    </StackPanel>
</Window>
